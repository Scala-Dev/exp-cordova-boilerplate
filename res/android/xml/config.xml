<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scala.expboilerplate" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="LocationManager">
        <param name="android-package" value="com.unarin.cordova.beacon.LocationManager" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FileOpener2">
        <param name="android-package" value="io.github.pwlin.cordova.plugins.fileopener2.FileOpener2" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NfcPlugin">
        <param name="android-package" value="com.chariotsolutions.nfc.plugin.NfcPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="GeofencePlugin">
        <param name="android-package" value="com.cowbell.cordova.geofence.GeofencePlugin" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="60000" />
    <icon density="ldpi" src="res/android/drawable-ldpi/icon.png" />
    <icon density="mdpi" src="res/android/drawable-mdpi/icon.png" />
    <icon density="hdpi" src="res/android/drawable-hdpi/icon.png" />
    <icon density="xhdpi" src="res/android/drawable-xhdpi/icon.png" />
    <splash density="land-hdpi" src="res/android/drawable-land-hdpi/screen.png" />
    <splash density="land-ldpi" src="res/android/drawable-land-ldpi/screen.png" />
    <splash density="land-mdpi" src="res/android/drawable-land-mdpi/screen.png" />
    <splash density="land-xhdpi" src="res/android/drawable-land-xhdpi/screen.png" />
    <splash density="port-hdpi" src="res/android/drawable-port-hdpi/screen.png" />
    <splash density="port-ldpi" src="res/android/drawable-port-ldpi/screen.png" />
    <splash density="port-mdpi" src="res/android/drawable-port-mdpi/screen.png" />
    <splash density="port-xhdpi" src="res/android/drawable-port-xhdpi/screen.png" />
    <name>EXP Mobile</name>
    <description>
        A sample EXP example application
    </description>
    <author email="support@scala.com" href="http://www.scala.com">
        Scala, Inc.
    </author>
    <content src="index.html" />
    <allow-navigation href="http://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
