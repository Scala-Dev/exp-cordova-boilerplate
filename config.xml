<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scala.expboilerplate" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EXP Mobile</name>
    <description>
        A sample EXP example application
    </description>
    <author email="support@scala.com" href="http://www.scala.com">
        Scala, Inc.
    </author>
    <content src="index.html" />
    <allow-navigation href="http://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="60000" />

        <icon src="res/android/drawable-ldpi/icon.png" density="ldpi" />
        <icon src="res/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="res/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="res/android/drawable-xhdpi/icon.png" density="xhdpi" />

        <splash src="res/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="res/android/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="res/android/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="res/android/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

        <splash src="res/android/drawable-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="res/android/drawable-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="res/android/drawable-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="res/android/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="60000" />

        <icon src="res/ios/icons/icon-60@3x.png" width="180" height="180" />
        <icon src="res/ios/icons/icon-60.png" width="60" height="60" />
        <icon src="res/ios/icons/icon-60@2x.png" width="120" height="120" />
        <icon src="res/ios/icons/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icons/icon-76@2x.png" width="152" height="152" />
        <icon src="res/ios/icons/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icons/icon-40@2x.png" width="80" height="80" />
        <icon src="res/ios/icons/icon.png" width="57" height="57" />
        <icon src="res/ios/icons/icon@2x.png" width="114" height="114" />
        <icon src="res/ios/icons/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icons/icon-72@2x.png" width="144" height="144" />
        <icon src="res/ios/icons/icon-small.png" width="29" height="29" />
        <icon src="res/ios/icons/icon-small@2x.png" width="58" height="58" />
        <icon src="res/ios/icons/icon-50.png" width="50" height="50" />
        <icon src="res/ios/icons/icon-50@2x.png" width="100" height="100" />

        <splash src="res/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="res/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="res/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="res/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="res/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="res/ios/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="res/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="com.chariotsolutions.nfc.plugin" spec="https://github.com/chariotsolutions/phonegap-nfc.git" />
    <plugin name="com.unarin.cordova.beacon" spec="https://github.com/petermetz/cordova-plugin-ibeacon.git" />
    <plugin name="cordova-plugin-geofence" spec="https://github.com/cowbell/cordova-plugin-geofence.git" />
    <plugin name="io.github.pwlin.cordova.plugins.fileopener2" spec="https://github.com/pwlin/cordova-plugin-file-opener2" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.3.0" />
</widget>
