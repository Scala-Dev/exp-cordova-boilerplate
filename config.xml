<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scala.expboilerplate" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EXP Mobile</name>
    <description>
        A sample EXP example application
    </description>
    <author email="support@scala.com" href="http://www.scala.com">
        Scala, Inc.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <feature name="NFC">
        <param name="id" value="com.chariotsolutions.nfc.plugin" />
        <param name="url" value="https://github.com/chariotsolutions/phonegap-nfc.git#:." />
    </feature>
    <feature name="Proximity Beacon Plugin">
        <param name="id" value="com.unarin.cordova.beacon" />
        <param name="url" value="https://github.com/petermetz/cordova-plugin-ibeacon.git#:." />
    </feature>
    <feature name="geofence">
        <param name="id" value="cordova-plugin-geofence" />
        <param name="url" value="https://github.com/cowbell/cordova-plugin-geofence#:." />
    </feature>
    <feature name="Console">
        <param name="id" value="org.apache.cordova.console" />
    </feature>
    <feature name="Device">
        <param name="id" value="org.apache.cordova.device" />
    </feature>
    <feature name="Splashscreen">
        <param name="id" value="org.apache.cordova.splashscreen" />
    </feature>
</widget>
